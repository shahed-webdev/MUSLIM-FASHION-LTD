@using DevMaker.FileStorage
@model IEnumerable<HomeMenuWithProductModel>
@{
    ViewData["Title"] = "Home";
    var baseUrl = FileBuilder.RootUrl;
}

@section Styles{
    <link href="~/pages-css/home.css" rel="stylesheet" />
}

<div class="container">
    <div id="carouselImage" class="carousel slide carousel-fade mt-4 z-depth-1 rounded" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/PRODUCTS/slider/1.jpg" alt="">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/PRODUCTS/slider/2.jpg" alt="">
            </div>
        </div>

        <a class="carousel-control-prev" href="#carouselImage" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselImage" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <section>
        @foreach (var category in Model)
        {
            <h4 class="category-title">@category.HomeMenuName</h4>
            <div class="row mb-5">
        @foreach (var product in category.Products)
        {
            <div class="col-lg-3 col-sm-6">
                <div class="card h-100">
                    <div class="view overlay h-100">
                        <img class="card-img-top" src="@baseUrl/@product.ImageFileNames" alt="@product.ProductName">
                        <a href="#!">
                            <div class="mask rgba-white-slight"></div>
                        </a>
                    </div>

                    <div class="card-body text-center">
                        <h4 class="product-name">@product.ProductName</h4>
                        <p class="product-price">৳@product.Price</p>
                    </div>
                </div>
            </div>
        }
            </div>
        }
    </section>
</div>

