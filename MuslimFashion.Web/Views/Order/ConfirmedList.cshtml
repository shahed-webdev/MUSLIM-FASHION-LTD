
@{
    ViewData["Title"] = "Confirmed Order List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1></h1>
<div class="m-md-3">
    <h4 class="page-header mb-3">Confirmed Order List</h4>

    <div class="card card-body">
        <table id="data-table" class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th><strong>Order No.</strong></th>
                    <th><strong>Order Amount</strong></th>
                    <th><strong>Delivery Info</strong></th>
                    <th><strong>Order Date</strong></th>
                    <th><strong>Status</strong></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        $(function() {
            dataTable.filter.push({ Field: "OrderStatus", Value: "Confirmed", Operand: dataTable.operand.Equal });
            dataTable.getData();
        });

        //get data
        var dataTable = {
            table: null,
            filter: [],
            init: function() {
                dataTable.table = $("#data-table").DataTable({
                    processing: true,
                    serverSide: true,
                    ajax: {
                        url: "/Order/OrderData",
                        type: "POST",
                        data: function(d) {
                            d.status = "@OrderStatus.Confirmed";
                        }
                    },
                    columns:
                    [
                        {
                            data: "OrderNo",
                            "render": function(data, type, row, meta) {
                                return `<a href="/Order/DeliveryOrder/${row.OrderId}" class="blue-text">${data}</a>`;
                            }
                        },
                        { data: "NetAmount",  "render": function(data, type, row, meta) {
                            return `<strong>৳${data}</strong>`;
                        } },
                        {
                            data: "DeliveryName",
                            "render": function(data, type, row, meta) {
                                return `<p class="mb-1"><i class="fas fa-user"></i> ${data}</p>
                            <p class="mb-1"><i class="fas fa-phone"></i> ${row.DeliveryPhone}</p>
                            <p class="mb-0"><i class="fas fa-map-marker-alt"></i> ${row.DeliveryAddress}</p>`
                            }
                        },
                        { data: "OrderDate", "render": function(data) { return moment(data).format('DD MMM YYYY') } },
                        { data: "OrderStatus" }
                    ],
                    columnDefs: [
                        { 'searchable': false, 'targets': [0, 1, 3] },
                        //{ 'sortable': false, 'targets': [0] },
                        { 'className': "text-center", "targets": [0,1, 3, 4] }
                    ]
                });
            },
            operand: {
                Equal: 0,
                NotEqual: 1,
                GreaterThan: 2,
                LessThan: 3,
                GreaterThanOrEqual: 4,
                LessThanOrEqual: 5,
                Contains: 6,
                StartsWith: 7,
                EndsWith: 8
            },
            getData: function() {
                dataTable.table ? dataTable.table.ajax.reload() : dataTable.init();
            },
            addSign: function(data) { return `${data}/-` }
        }
    </script>
}
