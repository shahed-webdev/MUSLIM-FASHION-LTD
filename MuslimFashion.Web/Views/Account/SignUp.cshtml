@model CustomerAddWithRegistrationModel
@{
    ViewData["Title"] = "Sign Up";
    var queryUrl = Context.Request.Query["ReturnUrl"].ToString();
    var returnUrl = string.IsNullOrEmpty(queryUrl) ? "" : "?ReturnUrl=" + queryUrl;
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-lg-8 mx-auto mt-5">
            <div class="card card-signin my-5 pt-3">
                <div class="card-body">
                    <h4 class="card-title text-center">
                        <strong class="dark-grey-text">Customer Registration</strong>
                    </h4>

                    <form asp-route-returnUrl="@ViewBag.ReturnUrl" asp-controller="Account" asp-action="SignUp" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="md-form">
                                    <label asp-for="Name">Full Name</label>
                                    <input asp-for="Name" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="md-form">
                                    <label asp-for="Phone">Mobile Number</label>
                                    <input type="text" asp-for="Phone" maxlength="11" class="form-control" required>
                                    <span asp-validation-for="Phone"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="md-form">
                                    <label asp-for="UserName">Username</label>
                                    <input asp-for="UserName" type="text" class="form-control" required>
                                    <span asp-validation-for="UserName"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="md-form">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" type="email" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="md-form">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" type="password" class="form-control" required>
                                    <span asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="md-form">
                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" required>
                                    <span asp-validation-for="ConfirmPassword"></span>
                                </div>
                            </div>
                        </div>

                        <button class="btn z-depth-1a my-3 btn-custom-bg" type="submit">SignUp</button>
                        <div asp-validation-summary="All" class="alert alert-danger alert-dismissible fade show" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </form>
                    <div>
                        <p class="mb-0 font-small grey-text d-flex justify-content-end">Already have account? <a href="/Account/Login@(returnUrl)" class="blue-text ml-1">Sign In</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}